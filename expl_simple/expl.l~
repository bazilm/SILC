%{
#include<stdlib.h>
#include "y.tab.h"
extern int lineNo;
%}

digits	[0-9]
alphabets [a-zA-Z]
identifiers {alphabets}({alphabets}|{digits})*

%%

{digits}+	{yylval.ival = atoi(yytext);
		return INTEGER;
		}

[-+*/;]		{return *yytext;}
\=\=		return EQ;
\<\=		return LE;
\>\=		return GE;
!=		return NE;
and		return AND;
or		return OR;
not		return NOT;
read		return READ;
write		return WRITE;
begin		return BEG;
end		return END;
if		return IF;
then		return THEN;
else		return ELSE;
endif		return ENDIF;
while		return WHILE;
do		return DO;
endwhile 	return ENDWHILE;
{identifiers}	{yylval.id = LookUp(yytext);
		if(!yylval.id)
			yylval.id = GInstall(yytext,INT,1);
		return VAR;}

[ \t]
\n		lineNo++;		

.		return *yytext;	

			

%%

int yywrap()
{
return 1;
}

							



